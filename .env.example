# Database
DATABASE_URL=sqlite+aiosqlite:///./scolaia.db

# Base URL
SERVER_HOST=http://localhost:8000

# Security
# CRITICAL: Generate a secure random key for production
# Use: openssl rand -hex 32
# WARNING: Changing this key after the application is in use will:
#  - Invalidate all existing user sessions
#  - Make it impossible to decrypt previously encrypted data
SECRET_KEY=replace_this_with_a_secure_random_key_for_production
ACCESS_TOKEN_EXPIRE_MINUTES=11520  # 8 days

# Email Configuration
# Configuración general de SMTP
SMTP_HOST=smtp.gmail.com
SMTP_TLS_PORT=587
SMTP_SSL_PORT=465
SMTP_SAFE_CONNECTION=yes
SMTP_AUTH_REQUIRED=yes
SMTP_TLS_REQUIRED=no
SMTP_SSL_REQUIRED=no

# Credenciales de autenticación
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password

# Configuración del remitente
SMTP_FROM_EMAIL=your-email@gmail.com
SMTP_FROM_NAME=ScolaIA Admin
SMTP_SUBJECT=no-reply. Automatic email sent by ScolaIA
SMTP_SIGNATURE=By ScolaIA team. if you have received this mail by mistake, please contact to admin@scolaia.net\nScolaIA Team

# OpenAI
OPENAI_API_KEY=your-openai-api-key
MODEL=gpt-4-turbo-preview
TEMPERATURE=0.7
MAX_TOKENS=2000

# General
REGISTRATION_OPEN=true
WELCOME_MESSAGE=Welcome to ScolaIA
OWNER_NAME=Owner Name
OWNER_EMAIL=owner@yourmail.com
