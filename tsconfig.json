{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ES2020",
    "outDir": "./static/dist",
    "rootDir": "./static/ts",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "allowJs": true,
    "lib": ["ES2019", "DOM", "DOM.Iterable"],
    "baseUrl": "./static/ts",
    "paths": {
      "*": ["*"]
    }
  },
  "include": ["static/ts/**/*"],
  "exclude": ["node_modules"]
}
